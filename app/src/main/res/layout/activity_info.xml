<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Fond"
        android:layout_width="493dp"
        android:layout_height="773dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/fond"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/Son"
        android:layout_width="350"
        android:layout_height="350"
        app:srcCompat="@drawable/son"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/Titre"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:fontFamily="@font/paprika"
        android:text="Titre de la musique"
        android:textColor="#000000"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:id="@+id/Artiste"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:fontFamily="@font/paprika"
        android:text="Artiste :"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="534dp" />

    <TextView
        android:id="@+id/Album"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:fontFamily="@font/paprika"
        android:text="Album :"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="608dp" />

    <TextView
        android:id="@+id/Temps"
        android:layout_width="346dp"
        android:layout_height="56dp"
        android:fontFamily="@font/paprika"
        android:text="Temps :"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="681dp" />

</androidx.constraintlayout.widget.ConstraintLayout>